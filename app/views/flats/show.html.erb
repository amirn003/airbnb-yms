 %>


<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">

      <% if !@flat.photo.attached? %>
        <%= image_tag "logo.png", height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= cl_image_tag @flat.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>


        <h1><%= @flat.name %></h1>
          <p class="font-weight-bold"><%= @flat.price %>â‚¬ per night</p>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      <div class="button-container">
        <% if policy(@flat).edit? %>
          <%= link_to "Edit this flat", edit_flat_path(@flat), class: "custom-button" %>
        <% end %>
        <%= button_to "Destroy this flat", @flat, class: "custom-button", method: :delete if policy(@flat).destroy? %>
        <%= link_to "Back to flats", flats_path, class: "custom-button" %>
      </div>

      <div style="width: 100%; height: 600px;"
          data-controller="mapshow"
          data-mapshow-marker-value="<%= @marker.to_json %>"
          data-mapshow-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book now!</h5>


        <%= simple_form_for [@flat, @booking] do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :date, as: :date, html5: true %>
            <%= f.input :date, as: :date, html5: true %>
            <%= f.input :people %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, class: "custom-button" %>
          </div>
        <% end %>
        <h5>Booking successful! </h5>
        <div class= "bookings_class">
     <% @flat.bookings.each do |booking|  %>
     <p>Booked on </p> <span><%= booking.date %></span>
     <p> Booked for </p> <span> <%= booking.people %> </span>

     <% end %>
        </div>
  </div>
</div>
